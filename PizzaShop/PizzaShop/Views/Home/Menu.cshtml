
@using Model.Entities;
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model.Entities.tblMonAn>

<section class="bg-5 h-500x main-slider pos-relative">
    <div class="triangle-up pos-bottom"></div>
    <div class="container h-100">
        <div class="dplay-tbl">
            <div class="dplay-tbl-cell center-text color-white pt-90">
                <h2 class="mt-30 mb-15">Menu</h2>
            </div><!-- dplay-tbl-cell -->
        </div><!-- dplay-tbl -->
    </div><!-- container -->
</section>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content main-item">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Pizza Margherita</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="">
                    <div class="sided-90x mb-30 main-item">
                        <div class="s-left"><img class="br-3" src="~/Content/images/Pizza/Veggie-Pizza.jpg" alt="Menu Image"></div><!--s-left-->
                        <div class="s-right">
                            <p>
                                Đây là sản  phẩm tuyệt vời nhất của chúng tôi. Sóng gió bạc phận hồng nhan.
                                Từ ngày  thơ đến khi ta thờ còn thờ ơ, thương em bờ vai nhỏ nhoi. Đời phiêu du khó tìm.
                            </p>
                            <div class="price-item">
                                <div>
                                    <b>Cỡ nhỏ:</b>
                                    <p>89.000 VNĐ</p>
                                </div>
                                <div>
                                    <b>Cỡ vừa:</b>
                                    <p>189.000 VNĐ</p>
                                </div>
                                <div>
                                    <b>Cỡ lớn:</b>
                                    <p>259.000 VNĐ</p>
                                </div>
                            </div>
                            <div class="chose-size">
                                <div class="form-group form-check">
                                    <input type="checkbox" class="" id="cbSizeS">
                                    <label class="form-check-label" for="cbSizeS">Cỡ nhỏ</label>
                                </div>
                                <div class="form-group form-check">
                                    <input type="checkbox" class="" id="cbSizeM">
                                    <label class="form-check-label" for="cbSizeM">Cỡ vừa</label>
                                </div>
                                <div class="form-group form-check">
                                    <input type="checkbox" class="" id="cbSizeL">
                                    <label class="form-check-label" for="cbSizeL">Cỡ lớn</label>
                                </div>
                            </div>
                        </div><!--s-right-->
                    </div><!-- sided-90x -->
                </div><!-- food-menu -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">
                    <a href="javascript:void(0);" class="btn-addToCart">
                        <b>Đặt hàng</b>
                    </a>
                </button>
            </div>
        </div>
    </div>
</div>

<section class="bg-lite-blue">
    <div class="container">
        <div class="heading"><h3>Pizza</h3></div>
        <div class="row">
            @foreach (tblMonAn item in Model)
            {
                if (item.LoaiMon == "Pizza" && item.KichThuoc == "Size S")
                {
                    <div class="col-md-6">
                        <div class="sided-90x mb-30 main-item">
                            <div class="s-left"><img class="br-3" src="~/Content/images/menu/@item.AnhMon" alt="Menu Image"></div><!--s-left-->
                            <div class="s-right">
                                <b>@item.TenMon</b>
                                <a class="float-right btn-fill-primary plr-5" data-toggle="modal" data-target="#exampleModal">
                                    <p>Thêm ngay</p>
                                </a>
                                <p class="pr-70">@item.MoTa</p>
                            </div><!--s-right-->
                        </div><!-- sided-90x -->
                    </div><!-- food-menu -->
                }

            }

        </div><!-- row -->
    </div><!-- container -->
</section>


